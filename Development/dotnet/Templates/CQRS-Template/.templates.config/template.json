{
    "$schema": "http://json.schemastore.org/template",
    "author": "Walker Chesley",
    "classifications": [
      "Clean Architecture"
    ],
    "name": "CQRS Creator",
    "description": "Create new query or command",
    "identity": "WalkerChesley.CQRS",
    "groupIdentity": "WalkerChesley.CQRS",
    "shortName": "cqrs",
    "tags": {
      "language": "C#",
      "type": "item"
    },
    "sourceName": "CQRS",
    "preferNameDirectory": false,
    "symbols": {
      "DefaultNamespace": {
        "type": "bind",
        "binding": "msbuild:RootNamespace",
        "replaces": "Cqrs.Application",
        "defaultValue": "Cqrs.Application"
      },
      "featureName": {
        "type": "parameter",
        "datatype": "string",
        "replaces": "CQRS.Application",
        "fileRename": "CQRS.Application",
        "description": "The name of the feature"
      },
      "useCaseType": {
        "type": "parameter",
        "datatype": "choice",
        "isRequired": true,
        "choices": [
          {
            "choice": "command",
            "description": "Create a new command"
          },
          {
            "choice": "query",
            "description": "Create a new query"
          }
        ],
        "description": "The type of use case to create"
      },
      "creatCommand": {
        "type": "computed",
        "value": "(useCaseType == \"command\")"
      },
      "createQuery": {
        "type": "computed",
        "value": "(useCaseType == \"query\")"
      },
      "returnType": {
        "type": "parameter",
        "datatype": "string",
        "isRequired": false,
        "replaces": "object",
        "defaultValue": "object"
      }
    }
  }